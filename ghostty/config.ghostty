# Load Catppuccin Mocha theme
import = themes/catppuccin-mocha.theme

# Font
font-family = CaskaydiaCove Nerd Font
font-size = 16
font-ligatures = true
font-hinting = slight
font-antialias = true

# Terminal shell
shell = /bin/zsh
term = xterm-256color

# Window behavior
start-fullscreen = true
window-padding-x = 2
window-padding-y = 2

# Rendering & DX
enable-kitty-graphics = true
copy-on-select = true
watch-config = true
