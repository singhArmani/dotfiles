[merge]
tool = vim_mergetool
;conflictStyle = diff3

[mergetool "vim_mergetool"]
cmd = vim -f -c "MergetoolStart" "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
trustExitCode = true

[alias]
    cb = checkout -b
	unstage = reset HEAD --
	last = log -1 HEAD
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %C(bold blue)[%an]' --abbrev-commit --date=relative
    graph = log --oneline --decorate --graph --all
    pf = push --force-with-lease
    fom = fetch origin master
    rbi = rebase -i origin/master
    rbc = rebase --continue
    rba = rebase --abort
    fix = commit --amend --no-edit 
    gds = git diff --cached
    # rewording last commit (git commit --amend)
    r = commit --amend 
    exp = commit -v
    logs = shortlog
    bb = checkout -
	undo = "!f() { git reset --hard $(git rev-parse --abbrev-ref HEAD)@{${1-1}}; }; f"
    wip = commit -m "WIP" -n
    # only show the word diff in color
    wd = diff --word-diff --word-diff-regex='\\w+'

    # show list of conflicted files 
    lcf = diff --name-only --diff-filter=U

    # Remove the last resolved merge commit (remove merge commit)
    rmc = reset --hard ORIG_HEAD

    # Resets the local master to match the one on the remote
    rogm = reset --hard origin/master
	b = brunch
	praise = blame

[core]
	excludesfile = /Users/amandeep.singh/.gitignore_global
	attributesfile = ~/.gitattributes
	pager = diff-so-fancy | less --tabs=4 -RFX
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[diff "image"]
	textconv = imgcat
[user]
	name = singhArmani
	email = singh_aman@hotmail.com.au
[rebase]
	autosquash = true
[help]
	autoCorrect = 1
;[interactive]
    ;diffFilter= diff-so-fancy
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
